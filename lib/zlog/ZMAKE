#ZMAKE file generated by zmake

#git root
root('../../../')

#complier
COMPLIER('g++')

#gxx flag
GXX_FLAG('-O2')

#link flag
LINK_FLAG('-lpthread')

#output dir
OUTPUT_DIR('output')

#config lib
lib('app/lib/configure')

#include folders
include('./include')

#head file
header = './include/*'
